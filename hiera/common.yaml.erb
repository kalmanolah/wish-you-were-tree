classes:
    - bootstrap
    - locales
    - sudo
    - sudo::configs
    - timezone

locales::locales:
    - en_US.UTF-8 UTF-8
locales::default_locale: 'en_US.UTF-8'

timezone::timezone: Europe/Brussels

sudo::configs:
    defaults:
        content: "Defaults env_reset\nDefaults secure_path=\"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin\""
        priority: 10
    sudo:
        content: '%sudo ALL=(ALL:ALL) ALL'
        priority: 20
    admins:
        content: '%admins ALL=(ALL) NOPASSWD: ALL'
        priority: 30

bootstrap::auth::groups:
    admins:
        system: true
        gid: 512
    fuse:
        system: true

bootstrap::auth::users:
    root:
        password: <%= root_password_hash %>
        uid: 0
        gid: 0
        home: /root
    kalman:
        password: <%= user_password_hash %>
        uid: 1000
        gid: 1000
        groups:
            - admins
            - sudo
            - fuse
        comment: Kalman Olah
        home: /home/kalman
        shell: /bin/zsh

bootstrap::auth::ssh_authorized_keys:
    kalman@workbox:
        key: <%= user_public_key %>
        type: ssh-rsa
        user: kalman

